<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvRenameNameLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:text="Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edRenameName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="photo_name"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/tvRenameNameLabel"
            app:layout_constraintStart_toStartOf="@+id/tvRenameNameLabel"
            app:layout_constraintTop_toBottomOf="@+id/tvRenameNameLabel" />

        <TextView
            android:id="@+id/tvRenameExtensionLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Extension"
            app:layout_constraintEnd_toEndOf="@+id/edRenameName"
            app:layout_constraintStart_toStartOf="@+id/edRenameName"
            app:layout_constraintTop_toBottomOf="@+id/edRenameName" />

        <EditText
            android:id="@+id/edRenameExtension"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=".png"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvRenameExtensionLabel"
            app:layout_constraintStart_toStartOf="@+id/tvRenameExtensionLabel"
            app:layout_constraintTop_toBottomOf="@+id/tvRenameExtensionLabel" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>